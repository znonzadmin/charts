/* pages/friend.wxss */
.page {
    font-size: 14px;
    position: relative;
    left: 0;
    top: 0;
}
.headimg{
    width:100%;
    height: 120px;
    background: #fff;
}

.headimg .wchatname{
    left: 100px;
    font-size:12px;
    position:absolute;
    width:100px;
    top:42px;
}
.headimg image{
    position:absolute;
    left:10px;
    top:20px;
    background:#000;
    width:80px;
    height:80px;
}
.headimg .username{
    position: absolute;
    font-size: 14px;
    left: 100px;
    width:120px;
    top:20px;

}
.headimg .sex{
    width:22px;
    height: 22px;
    position: absolute;
    left: 160px;
    background: #f0f0f0;
    top: 20px;
    padding-top: 4px;
    padding-left:4px;
}
.tag{ 
    width:100%;
    height: 44px;
    line-height: 44px;
    border-top:1px solid #d3d3c3;
    border-bottom:#d3d3c3 1px solid ;
    margin-top:10px;
    margin-bottom:10px;
}

.photos{
    margin-top: 20px;
    height: 100px;
    border-top:1px solid #d3d3c3;
    border-bottom:1px solid #d3d3c3;
    width:100%;
    vertical-align: middle;
    display: table;

}
.photos text{
    position:relative;
    width:100px;
    top:-50px;
}

.more{
    height: 44px;
    line-height: 44px;
    border:1px solid #d3d3c3;
    border-top:0;
    border-left:0;
    border-right:0;
    font-size:14px;
}
.sendmessage{
    margin-top:10px;
    width:80%;
    margin-bottom:40px;
    background: #1AAD16;
    color: #fff;
}
.vadioChat{
    width:80%;
}
.photos image{
    width:80px;
    height: 80px;
    background: #eee;
    margin: 10px;
    margin-right:0;
    
}
